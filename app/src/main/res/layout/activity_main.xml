<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        android:onClick="swapTheme"
        android:text="Swap Theme" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        android:onClick="openTapChip"
        android:visibility="gone"
        android:text="Show Tap Chips" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        android:onClick="openBottomSheet"
        android:text="Show Bottom Sheet Dialog" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:onClick="openAmountDiscountRow"
        android:text="Show Amount Discount Items" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        android:visibility="gone"
        android:onClick="openSectionsTabLayout"
        android:text="Show Sections TabLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="openActionButton"
        android:visibility="gone"
        android:text="Show Animated Action Button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        android:onClick="openSwitchView"
        android:visibility="gone"
        android:text="Show Switch view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        android:onClick="openNFCView"
        android:visibility="gone"
        android:text="Show NFC view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        android:visibility="gone"
        android:onClick="openCardScannerView"
        android:text="Show Scanner view" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        android:onClick="openFragment"
        android:visibility="gone"
        android:text="Go Pay" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        android:onClick="otpFragment"
        android:visibility="gone"
        android:text="OTP Fragment" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        android:onClick="openBiometrics"
        android:text="Biometrics" />
</LinearLayout>

