<?xml version="1.0" encoding="utf-8"?>
<company.tap.tapuilibrary.TapChip xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    android:outlineAmbientShadowColor="@color/cardview_shadow_start_color"
    app:contentPadding="3dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="3dp"
    android:id="@+id/tapcard_Chip"

   >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      >
    <company.tap.tapuilibrary.TapImageView
        android:id="@+id/imageView_visa"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/visa"
        android:scaleType="centerCrop"
        />


    <company.tap.tapuilibrary.TapTextView
        android:id="@+id/textView_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="∙∙∙∙ 1234"
        android:textAlignment="center"
        android:textSize="10sp"/>

    <company.tap.tapuilibrary.TapImageView
        android:id="@+id/imageView_amex"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/amex"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <company.tap.tapuilibrary.TapImageView
        android:id="@+id/imageView_master"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/mastercard"
        android:scaleType="centerCrop"/>
  </LinearLayout>
</company.tap.tapuilibrary.TapChip>