<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3">


    <company.tap.tapuilibrary.TapImageView
        android:id="@+id/imageView_visa"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/visa"
            android:scaleType="centerCrop"
            />


    <company.tap.tapuilibrary.TapTextView
        android:id="@+id/textView_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="∙∙∙∙ 1234"
        android:textAlignment="center"
        android:textSize="15sp"/>

    <company.tap.tapuilibrary.TapImageView
        android:id="@+id/imageView_master"
        android:layout_width="40dp"
        android:layout_height="40dp"
         android:background="@drawable/mastercard"
        android:scaleType="centerCrop"/>


</LinearLayout>
