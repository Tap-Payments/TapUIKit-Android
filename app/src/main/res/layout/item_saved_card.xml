<?xml version="1.0" encoding="utf-8"?>
<company.tap.tapuilibrary.uikit.atoms.TapChip xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tapCardChip2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:elevation="0dp"
    android:hardwareAccelerated="true"
    app:cardElevation="8dp"
    android:layout_marginBottom="@dimen/margin_basic_10dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/deleteImageView2"
        android:layout_width="16dp"
        android:layout_height="12dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/btn_close_normal"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:paddingTop="5dp"
        android:paddingEnd="18dp"
        android:paddingBottom="5dp">

        <company.tap.tapuilibrary.uikit.atoms.TapImageView
            android:id="@+id/imageView_amex"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/amex"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView_carddetails"
            app:layout_constraintTop_toTopOf="parent" />

        <company.tap.tapuilibrary.uikit.atoms.TapTextView
            android:id="@+id/textView_carddetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif"
            android:text="•••• XXXX"
            android:textColor="#4b4847"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageView_amex"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="•••• XXXX" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</company.tap.tapuilibrary.uikit.atoms.TapChip>