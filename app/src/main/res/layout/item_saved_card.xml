<?xml version="1.0" encoding="utf-8"?>
<company.tap.tapuilibrary.uikit.atoms.TapChip xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tapcard_Chip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    app:elevation="8dp">

    <ImageView
        android:id="@+id/deleteImageView2"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_gravity="right|top"
        android:elevation="15dp"
        android:src="@drawable/btn_close_normal"
        android:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp">

        <company.tap.tapuilibrary.uikit.atoms.TapImageView
            android:id="@+id/imageView_amex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/amex"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView_carddetails"
            app:layout_constraintTop_toTopOf="parent" />

        <company.tap.tapuilibrary.uikit.atoms.TapImageView
            android:id="@+id/textView_carddetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif"
            android:text="•••• XXXX"
            android:textColor="#4b4847"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageView_amex"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="•••• XXXX" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</company.tap.tapuilibrary.uikit.atoms.TapChip>