<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <company.tap.tapuilibrary.uikit.views.TapListItemView
        android:id="@+id/amount_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_list" />

    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/item_list"
        android:fontFamily="sans-serif-light"
        android:paddingStart="@dimen/margin_basic_15dp"
        android:paddingEnd="@dimen/margin_basic_15dp"
        android:paddingBottom="@dimen/margin_basic_10dp"
        android:textColor="#a8a8a8"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. " />

    <company.tap.tapuilibrary.uikit.atoms.TapSeparatorView
        android:id="@+id/itemseparator"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/view_color" />


</LinearLayout>