<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:blurkit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/otp_blur"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/otp_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <company.tap.tapuilibrary.uikit.views.TapOTPView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="19dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:textColor="#4b4847"
            app:itemCount="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:lineColor="@color/colorAccent"
            app:viewType="line"
            tools:layout_editor_absoluteY="308dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:orientation="horizontal"
            android:weightSum=".75">

            <company.tap.tapuilibrary.uikit.atoms.TapTextView
                android:id="@+id/otp_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="0.1"
                android:fontFamily="sans-serif-light"
                android:textColor="#4b4847"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="OTP has been sent to" />

            <company.tap.tapuilibrary.uikit.atoms.TapTextView
                android:id="@+id/mobile_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:fontFamily="sans-serif-light"
                android:textColor="#1381f9"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="+965 6••••111  " />

            <company.tap.tapuilibrary.uikit.atoms.TapTextView
                android:id="@+id/timer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:textColor="#007aff"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="00:09" />

        </LinearLayout>

        <company.tap.tapuilibrary.uikit.atoms.TapButton
            android:id="@+id/action_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:text="click" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/otprootview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>


