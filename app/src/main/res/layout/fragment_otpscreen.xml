<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7f9f9f9"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <company.tap.tapuilibrary.views.TapOTPView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="19dp"
        android:cursorVisible="true"
        android:inputType="number"
        android:textColor="#4b4847"
        app:itemCount="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:lineColor="@color/colorAccent"
        app:viewType="line"
        tools:layout_editor_absoluteY="308dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum=".75"
        android:layout_margin="22dp">
        <company.tap.tapuilibrary.atoms.TapTextView
            android:id="@+id/otp_sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#4b4847"
            tools:text="OTP has been sent to"
           android:layout_weight="0.1"
            android:layout_gravity="start"

            />
        <company.tap.tapuilibrary.atoms.TapTextView
            android:id="@+id/mobile_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="normal"
            android:textColor="#1381f9"
            tools:text="+965 6••••111  "
            android:layout_weight="0.25"
            />

    <company.tap.tapuilibrary.atoms.TapTextView
        android:id="@+id/timer_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#007aff"
        tools:text="00:09"
        android:layout_weight="0.35"
        />

    </LinearLayout>

    <company.tap.tapuilibrary.atoms.TapButton
        android:id="@+id/action_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:text="click"

        />

</LinearLayout>
