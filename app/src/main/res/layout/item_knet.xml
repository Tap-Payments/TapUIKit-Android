<?xml version="1.0" encoding="utf-8"?>
<company.tap.tapuilibrary.uikit.atoms.TapChip xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tapCardChip3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_gravity="center"
    app:cardElevation="10dp"
    app:contentPadding="6dp">

    <ImageView
        android:id="@+id/deleteImageView3"
        android:layout_width="20dp"
        android:layout_height="12dp"
        android:layout_gravity="right|top"
        android:src="@drawable/btn_close_normal"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <company.tap.tapuilibrary.uikit.atoms.TapImageView
            android:id="@+id/imageView_knet"
            android:layout_width="@dimen/margin_basic_25dp"
            android:layout_height="@dimen/margin_basic_25dp"
            android:layout_gravity="center"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            android:src="@drawable/knet" />

        <company.tap.tapuilibrary.uikit.atoms.TapImageView
            android:id="@+id/imageView_benefit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            android:src="@drawable/benefit"
            android:visibility="gone" />

    </LinearLayout>
</company.tap.tapuilibrary.uikit.atoms.TapChip>