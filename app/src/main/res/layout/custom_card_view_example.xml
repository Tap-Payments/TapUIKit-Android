<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardscan_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <company.tap.tapuilibrary.uikit.atoms.TapDragIndicator
        android:layout_width="75dp"
        android:layout_height="4dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        android:layout_marginEnd="150dp"
        app:cardCornerRadius="@dimen/margin_basic_8dp"
        app:cardElevation="@dimen/margin_basic_0dp">

        <company.tap.tapuilibrary.uikit.atoms.TapSeparatorView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/view_color" />
    </company.tap.tapuilibrary.uikit.atoms.TapDragIndicator>

    <company.tap.tapuilibrary.uikit.views.TapHeaderSectionView
        android:id="@+id/headerView_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_basic_9dp" />

    <company.tap.tapuilibrary.uikit.views.TapAmountSectionView
        android:id="@+id/amount_section_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BF000000"
        android:orientation="vertical">

        <company.tap.tapuilibrary.uikit.atoms.TapChip
            style="@style/CustomCardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardBackgroundColor="#f4f4f4">


            <company.tap.tapuilibrary.uikit.atoms.TapTextView
                android:id="@+id/cardscan_ready"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_basic_16dp"
                android:layout_marginTop="@dimen/margin_basic_16dp"
                android:layout_marginBottom="@dimen/margin_basic_16dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#4b4847"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="Ready to scan." />

        </company.tap.tapuilibrary.uikit.atoms.TapChip>

        <FrameLayout
            android:id="@+id/inline_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>