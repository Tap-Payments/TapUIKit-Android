<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource"
    android:background="@drawable/corner_radius"
    android:autoMirrored="true"
    app:cardCornerRadius="@dimen/margin_basic_8dp">


    <company.tap.tapuilibrary.atoms.TapDragIndicator
        android:layout_width="75dp"
        android:layout_height="4dp"
        android:layout_marginEnd="150dp"
        android:layout_gravity="center"
        android:layout_marginStart="150dp"
        android:background="@drawable/corner_radius"
        android:layout_marginTop="@dimen/margin_basic_10dp"
        app:cardElevation="@dimen/margin_basic_0dp">
        <company.tap.tapuilibrary.atoms.TapSeparatorView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/indicatorSeparator"
            android:layout_gravity="center_horizontal"
            android:background="@color/separator_color" />

    </company.tap.tapuilibrary.atoms.TapDragIndicator>

    <company.tap.tapuilibrary.views.TapHeaderSectionView
        android:id="@+id/headerView"
        android:layout_marginTop="@dimen/margin_basic_9dp"
        android:layout_marginBottom="@dimen/margin_basic_9dp"
        android:layoutDirection="locale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        />
    <company.tap.tapuilibrary.atoms.TapSeparatorView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:id="@+id/topSeparator"
        android:layout_marginStart="@dimen/default_padding"
        android:layout_marginEnd="@dimen/default_padding"
        android:background="@color/separator_color"/>

    <company.tap.tapuilibrary.views.TapAmountSectionView
        android:id="@+id/amount_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:paddingStart="@dimen/activity_total_margin"
        android:background="@color/white"
       />
    <company.tap.tapuilibrary.atoms.TapSeparatorView
        android:layout_width="match_parent"
        android:id="@+id/separator"
        android:layout_height="0.7dp"
        android:background="@color/separator_color"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:background="@color/chip_background">
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@color/header_color">
        <company.tap.tapuilibrary.atoms.TapChipGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainChipgroup"
            android:background="@color/chip_background"
            android:orientation="horizontal" />
    </FrameLayout>
    <company.tap.tapuilibrary.atoms.TapSeparatorView
        android:layout_width="wrap_content"
        android:layout_height="0.7dp"
        android:layoutDirection="locale"
        android:id="@+id/separator_"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:background="@color/separator_color"
        android:visibility="visible"/>
    </LinearLayout>

    <company.tap.tapuilibrary.views.TapSelectionTabLayout
        android:id="@+id/sections_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:background="@color/selection_tab_color"/>
    <LinearLayout
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:background="@color/card_input"
        android:id="@+id/payment_input_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <company.tap.tapuilibrary.atoms.TapButton
            android:id="@+id/nfc_scan"
            android:layout_width="@dimen/margin_basic_19dp"
            android:layout_height="@dimen/margin_basic_19dp"
            android:layout_gravity="end"
            android:background="@drawable/nfc" />
    </LinearLayout>
    <company.tap.tapuilibrary.atoms.TapSeparatorView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:id="@+id/separatorــ"
        android:background="@color/separator_color" />


    <FrameLayout
        android:id="@+id/fragment_container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_container_nfc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </FrameLayout>

    <company.tap.tapuilibrary.views.TapCardSwitch
        android:layout_height="wrap_content"
        android:id="@+id/switch_pay_demo"
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:layoutDirection="locale"
        android:paddingStart="@dimen/default_padding"
        android:background="@color/chip_background"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:background="#f4f4f4">
        <company.tap.tapuilibrary.views.TabAnimatedActionButton
            android:id="@+id/actionButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/action_bar_default_height"
            android:elevation="0dp"
            style="?android:attr/borderlessButtonStyle"
            android:stateListAnimator="@null"
            android:layout_gravity="center" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <FrameLayout
        android:id="@+id/webViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>


