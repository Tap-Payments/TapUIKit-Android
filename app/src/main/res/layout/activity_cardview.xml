<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <company.tap.tapuilibrary.uikit.atoms.TapChipGroup
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_basic_4dp"
        android:background="@color/fill_card"
        android:orientation="horizontal">

    </company.tap.tapuilibrary.uikit.atoms.TapChipGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E9E9E9"
        android:orientation="vertical">

        <company.tap.tapuilibrary.uikit.atoms.TapSwitch
            android:id="@+id/hideKnetSwitch"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginLeft="@dimen/margin_basic_20dp"
            android:layout_marginRight="@dimen/margin_basic_20dp"
            android:checked="true"
            android:text="Knet" />

        <company.tap.tapuilibrary.uikit.atoms.TapSwitch
            android:id="@+id/hideSavedcardSwitch"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginLeft="@dimen/margin_basic_20dp"
            android:layout_marginRight="@dimen/margin_basic_20dp"
            android:checked="true"
            android:text="Saved Card" />


    </LinearLayout>

    <company.tap.tapuilibrary.uikit.atoms.TapTextViewNew
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_basic_8dp"
        android:text="Currency Chips Example" />

    <company.tap.tapuilibrary.uikit.atoms.TapChipGroup
        android:id="@+id/currencyLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/fill_card"
        android:orientation="horizontal" />

    <company.tap.tapuilibrary.uikit.organisms.GoPayLayout
        android:id="@+id/goPay_ll"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <company.tap.tapuilibrary.uikit.views.TapSelectionTabLayout
        android:id="@+id/tab_select_gopay"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

<!--    <company.tap.tapuilibrary.uikit.organisms.GoPayLoginInput
        android:id="@+id/gopay_login_input"
        android:layout_width="match_parent"
        android:layout_height="80dp" />-->

    <company.tap.tapuilibrary.uikit.organisms.GoPayPasswordInput
        android:id="@+id/goPay_password"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="visible" />

</LinearLayout>