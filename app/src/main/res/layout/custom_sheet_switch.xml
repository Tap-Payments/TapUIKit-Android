<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <company.tap.tapuilibrary.atoms.TapTextView
        android:id="@+id/demo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap Switch Demo"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        />

    <company.tap.tapuilibrary.atoms.TapEditText
        android:id="@+id/demo_edit_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLines="1"
        android:includeFontPadding="true"
        android:padding="5dp"
        android:layout_margin="@dimen/margin_basic_8dp"
        android:background="@drawable/editext_border"
        android:hint="Enter Mobile / Card Here "

         />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merchant Checkout set from backend"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="goPay Checkout set from backend"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Both set from backend"/>

    </RadioGroup>

    <company.tap.tapuilibrary.views.TapCardSwitch
        android:id="@+id/switch_pay_demo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       />

</LinearLayout>