<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_basic_16dp"
    android:layout_marginTop="@dimen/margin_basic_14dp"
    android:layout_marginEnd="@dimen/margin_basic_16dp"
    android:layoutDirection="locale"
    android:textDirection="locale"
    android:layout_marginBottom="@dimen/margin_basic_13dp">

    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_basic_10dp"
        android:layout_marginBottom="2dp"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif"
        android:gravity="start|top"
        android:lineSpacingExtra="2sp"
        android:maxLines="3"
        android:textColor="#4b4847"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/brief_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ITEMS" />



    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/brief_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="#a8a8a8"
        android:textSize="12sp"
        android:textStyle="normal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Bange Backpack" />

    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/total_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/pay_btn_padding_vertical"
        android:layout_marginBottom="2dp"
        android:fontFamily="sans-serif-light"
        android:gravity="end"
        android:textColor="#a8a8a8"
        android:textSize="12sp"
        android:textStyle="normal"

        app:layout_constraintTop_toBottomOf="@+id/brief_description"
       app:layout_constraintStart_toStartOf="@+id/brief_description"
        tools:text="1000,000.000" />


    <company.tap.tapuilibrary.uikit.atoms.TapImageView
        android:id="@+id/add_image"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-light"
        android:gravity="end"
        android:src="@drawable/add_items"
        android:visibility="gone"

        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        tools:text="1000,000.000" />

    <company.tap.tapuilibrary.uikit.atoms.TapImageView
        android:id="@+id/sub_image"
        android:layout_width="13dp"
        android:layout_height="@dimen/margin_basic_13dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-light"
        android:gravity="end"
        android:src="@drawable/sub_items"
        android:textSize="12sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        tools:text="1000,000.000" />


</androidx.constraintlayout.widget.ConstraintLayout>