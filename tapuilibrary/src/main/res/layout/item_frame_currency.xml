<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainView"
    android:orientation="vertical">

    <company.tap.tapuilibrary.uikit.atoms.TapChipGroup
        android:id="@+id/currencyLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chip_background"
        android:orientation="horizontal"
        android:padding="8dp">

    </company.tap.tapuilibrary.uikit.atoms.TapChipGroup>

    <company.tap.tapuilibrary.uikit.atoms.TapSeparatorView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_color" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/items_recylerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

