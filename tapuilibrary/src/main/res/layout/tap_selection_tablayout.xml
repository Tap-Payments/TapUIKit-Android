<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layoutDirection="locale"
    >

    <company.tap.tapuilibrary.uikit.atoms.TapTextViewNew
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="We Accept"
        android:id="@+id/acceptedCardText"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:textSize="@dimen/font_size_11sp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="#9F9F9F"
        android:textAllCaps="true"
        android:gravity="center" />
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabGravity="start"
        android:focusable="false"
        android:clickable="false"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="0dp"
        app:tabRippleColor="@null"
        android:overScrollMode="never"
        app:tabMode="fixed"
        android:layout_gravity="start"
        app:tabIndicatorGravity="bottom"
        android:fitsSystemWindows="true"
        app:tabIndicatorFullWidth="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/powered_by_tap"
        android:id="@+id/powerdBy_logo"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:foregroundGravity="center"

        />
</LinearLayout>
