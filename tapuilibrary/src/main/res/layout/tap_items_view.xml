<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_basic_16dp"
    android:layout_marginTop="@dimen/margin_basic_14dp"
    android:layout_marginEnd="@dimen/margin_basic_16dp"
    android:layout_marginBottom="@dimen/margin_basic_13dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.55"
        android:orientation="vertical">

        <company.tap.tapuilibrary.uikit.atoms.TapTextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2sp"
            android:textColor="#4b4847"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Item TItle" />

        <company.tap.tapuilibrary.uikit.atoms.TapTextView
            android:id="@+id/show_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="#a8a8a8"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="Show Description" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.45"
        android:orientation="vertical">

        <company.tap.tapuilibrary.uikit.atoms.TapTextView
            android:id="@+id/item_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:textColor="#4b4847"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="KD000,000.000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="0.5">

            <company.tap.tapuilibrary.uikit.atoms.TapTextView
                android:id="@+id/discount_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="sans-serif-light"
                android:gravity="end"
                android:textColor="#a8a8a8"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="Discount" />

            <company.tap.tapuilibrary.uikit.atoms.TapTextView
                android:id="@+id/total_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:fontFamily="sans-serif-light"
                android:gravity="end"
                android:textColor="#a8a8a8"
                android:textSize="12sp"
                android:textStyle="normal"
                tools:text="KD000,000.000" />

            <company.tap.tapuilibrary.uikit.atoms.TapTextView
                android:id="@+id/total_quantity"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_basic_3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_circle"
                android:gravity="center"
                android:textColor="#4b4847"
                android:textSize="9sp"
                android:textStyle="normal"
                tools:text="2" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>