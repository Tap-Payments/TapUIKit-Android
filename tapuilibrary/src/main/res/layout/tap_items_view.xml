<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/margin_basic_16dp"
    android:layout_marginTop="@dimen/margin_basic_14dp"
    android:layout_marginEnd="@dimen/margin_basic_16dp"
    android:layout_marginBottom="@dimen/margin_basic_13dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <company.tap.tapuilibrary.TapTextView
            android:id="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
            android:textColor="#4b4847"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="Item TItle" />

        <company.tap.tapuilibrary.TapTextView
            android:id="@+id/item_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:textColor="#4b4847"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="KD000,000.000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="@dimen/margin_basic_3dp">

        <company.tap.tapuilibrary.TapTextView
            android:id="@+id/show_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif-light"
            android:textColor="#a8a8a8"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="Show Description" />

        <company.tap.tapuilibrary.TapTextView
            android:id="@+id/total_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:drawableStart="@drawable/rounded_rectangle"
            android:fontFamily="sans-serif-light"
            android:gravity="end"
            android:textColor="#a8a8a8"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="KD000,000.000" />
    </LinearLayout>


</LinearLayout>