<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tapCardChip2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="@dimen/activity_total_margin10"
    app:cardElevation="0dp"
    android:hardwareAccelerated="true"
    android:layout_gravity="center">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/tapCardChip2Constraints"
        android:orientation="horizontal"
        android:paddingStart="18dp"
        android:paddingTop="5dp"
        android:paddingEnd="18dp"
        android:paddingBottom="5dp">

        <company.tap.tapuilibrary.uikit.atoms.TapImageView
            android:id="@+id/imageView_amex"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/mastercard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/textView_carddetails"
            app:layout_constraintTop_toTopOf="parent" />

        <company.tap.tapuilibrary.uikit.atoms.TapTextView
            android:id="@+id/textView_carddetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="sans-serif"
            android:text="•••• XXXX"
            android:textColor="#4b4847"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/imageView_amex"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="•••• XXXX" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/deleteImageView2"
        android:layout_width="16dp"
        android:layout_height="12dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|top"
        android:src="@drawable/close_icon"
        android:visibility="gone"
        tools:ignore="RtlHardcoded" />


</FrameLayout>
