    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_basic_25dp"
    android:paddingTop="@dimen/margin_basic_15dp"
    android:paddingBottom="@dimen/margin_basic_15dp">

    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/textview_alert_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/warningAlertText"
        android:textSize="12sp"
        android:textStyle="normal"
        android:visibility="gone"
        tools:text="Expiry date &amp; CVV number are missing." />


</LinearLayout>