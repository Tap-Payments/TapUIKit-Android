<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <company.tap.tapuilibrary.TapChip
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_basic_16dp"
            android:layout_marginBottom="@dimen/margin_basic_13dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="@dimen/margin_basic_0dp"
           >
        <company.tap.tapuilibrary.TapImageView
            android:id="@+id/businessIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <company.tap.tapuilibrary.TapTextView
            android:id="@+id/placeholderText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#000000"
            android:textColor="#ffffff"
            android:gravity="center"
            android:visibility="gone"/>
        </company.tap.tapuilibrary.TapChip>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_basic_10dp"
        android:orientation="vertical"
        >

        <company.tap.tapuilibrary.TapTextView
            android:id="@+id/buinessFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_basic_3dp"
            android:fontFamily="sans-serif"
            android:shadowColor="#b6b6b6"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:textColor="#a8a8a8"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="Payment for " />
        <company.tap.tapuilibrary.TapTextView
            android:id="@+id/businessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#4b4847"
            tools:text="Business Name"
            android:layout_marginTop="1dp"
           />


    </LinearLayout>
</LinearLayout>
</LinearLayout>