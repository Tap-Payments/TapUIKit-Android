<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:orientation="horizontal">
    <company.tap.tapuilibrary.TapImageView
        android:id="@+id/businessIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_basic_16dp"
        android:layout_marginBottom="@dimen/margin_basic_13dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_basic_10dp"
        android:orientation="vertical">

        <company.tap.tapuilibrary.TapTextView
            android:id="@+id/buinessFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#b6b6b6"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#a8a8a8"
            tools:text="Payment for "
            android:layout_marginTop="@dimen/margin_basic_3dp"
            />
        <company.tap.tapuilibrary.TapTextView
            android:id="@+id/businessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#4b4847"
            tools:text="Business Name"
            android:layout_marginTop="1dp"
           />



    </LinearLayout>
    <company.tap.tapuilibrary.TapImageView
        android:id="@+id/cancel_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/margin_basic_16dp"
        android:layout_marginBottom="@dimen/margin_basic_13dp"
        android:visibility="gone"/>
</LinearLayout>