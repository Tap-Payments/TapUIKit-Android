<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="top"
    android:orientation="vertical">


    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/titleText"
        android:textColor="@color/dark_gray"
        android:textSize="10sp" />

    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/descText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/descText"
        android:textColor="@color/dark_gray"
        android:textSize="10sp" />

    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/orderCodeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/orderCodeText"
        android:textColor="@color/dark_gray"
        android:textSize="10sp" />


    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/orderCodeValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/dark_gray"
        android:textSize="10sp" />


    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/codeExpireText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/codeExpireText"
        android:textColor="@color/dark_gray"
        android:textSize="10sp" />


    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/codeExpireValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/dark_gray"
        android:textSize="10sp" />


    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/linkDescText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:lines="2"
        android:padding="15dp"
        android:text="@string/linkDescText"
        android:textColor="@color/dark_gray"
        android:textSize="10sp" />


    <company.tap.tapuilibrary.uikit.atoms.TapTextView
        android:id="@+id/linkValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/dark_gray"
        android:textSize="10sp" />


    <company.tap.tapuilibrary.uikit.views.TabAnimatedActionButton
        android:id="@+id/payButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center|bottom"
        android:layout_marginStart="@dimen/margin_basic_20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="@dimen/margin_basic_20dp"
        android:layout_marginBottom="22dp"
        android:visibility="visible" />


</LinearLayout>