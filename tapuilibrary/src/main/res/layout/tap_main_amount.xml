<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/margin_basic_16dp">

    <company.tap.tapuilibrary.atoms.TapTextView
        android:id="@+id/textview_selectedcurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#4b4847"
        tools:text="SR1000,000.000"
        />
    <company.tap.tapuilibrary.atoms.TapTextView
        android:id="@+id/textView_currentcurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="14sp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:textColor="#a8a8a8"
        tools:text="KD1000,000.000"
        android:layout_below="@+id/textview_selectedcurrency"
        android:visibility="gone"

        />

    <company.tap.tapuilibrary.atoms.TapButton
        android:id="@+id/textView_itemcount"
        android:layout_width="70dp"
        android:layout_height="@dimen/margin_basic_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:textSize="9sp"
        android:textStyle="normal"
        tools:text="10 ITEMS"
        android:background="@drawable/rounded_rectangle"
        android:layout_alignParentEnd="true"
        android:elevation="@dimen/margin_basic_0dp"
        android:stateListAnimator="@null"
        />
</androidx.constraintlayout.widget.ConstraintLayout>