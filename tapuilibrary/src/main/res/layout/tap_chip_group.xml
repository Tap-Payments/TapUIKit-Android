<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/default_padding"
        android:paddingEnd="@dimen/default_padding"
        android:orientation="horizontal">

        <company.tap.tapuilibrary.atoms.TapTextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_10sp"
            android:textColor="@color/brown_grey_0"
            android:fontFamily="sans-serif"
            android:textAllCaps="true"
            tools:text= "kjnbbvcxvbnm"
            android:layout_gravity="start" />

        <company.tap.tapuilibrary.atoms.TapTextView
            android:id="@+id/group_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text = "kjnbbvcxvbnm"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="true"
            android:textSize="@dimen/font_size_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/text_color_light_"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chip_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      android:layout_gravity="center_vertical"
        android:paddingTop="@dimen/margin_basic_6dp"
         android:nestedScrollingEnabled="false"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>