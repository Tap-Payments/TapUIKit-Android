<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource"
    android:id="@+id/cardscan_view"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:background="#BF000000"
      >


        <company.tap.tapuilibrary.uikit.atoms.TapChip
            style="@style/CustomCardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:cardBackgroundColor="#f4f4f4"
            >


            <company.tap.tapuilibrary.uikit.atoms.TapTextView
                android:id="@+id/cardscan_ready"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="normal"
                android:textColor="#4b4847"
                tools:text="Ready to scan."
                android:layout_marginStart="@dimen/margin_basic_16dp"
                android:layout_marginTop="@dimen/margin_basic_16dp"
                android:layout_marginBottom="@dimen/margin_basic_16dp"
                />

        </company.tap.tapuilibrary.uikit.atoms.TapChip>

        <FrameLayout
            android:id="@+id/inline_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

</LinearLayout>