<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinear"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <company.tap.tapuilibrary.uikit.atoms.TapChip
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardInput_cardView"
        app:cardCornerRadius="@dimen/margin_basic_10dp"
        app:cardElevation="0dp"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <company.tap.tapuilibrary.uikit.atoms.TapSeparatorView
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            tools:background="@color/black_27"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/tabLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/payment_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:orientation="horizontal" />

            <RelativeLayout
                android:id="@+id/linear_paylayout"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:layout_toStartOf="@+id/payment_input_layout"


                >

                <!--

                                <ImageView
                                    android:id="@+id/nfc_button"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:padding="6dp"
                                    android:src="@drawable/icon_nfc"


                                    android:visibility="visible" />

                                <ImageView
                                    android:id="@+id/card_scanner_button"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentEnd="true"
                                    android:layout_gravity="center"
                                    android:layout_toEndOf="@+id/nfc_button"
                                    android:padding="6dp"
                                    android:src="@drawable/icon_scan"
                                    android:visibility="visible" />
                -->

                <ImageView
                    android:id="@+id/clear_text"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:padding="10dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/icon_close2"
                    android:visibility="gone" />

            </RelativeLayout>

            <company.tap.tapuilibrary.uikit.views.TapAlertView
                android:id="@+id/alertView"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/linear_paylayout"
                android:visibility="gone" />

            <company.tap.tapuilibrary.uikit.atoms.TapSeparatorView
                android:id="@+id/separator4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                tools:background="@color/black_27"
                android:visibility="gone"
                android:layout_below="@+id/linear_paylayout"/>

            <company.tap.tapuilibrary.uikit.views.TapInlineCardSwitch
                android:id="@+id/switch_Inline_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/alertView"
                android:layout_gravity="start"
                android:layoutDirection="locale" />
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/inlineProgressbar"
            android:visibility="gone"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"
            android:secondaryProgress="100" />



    </company.tap.tapuilibrary.uikit.atoms.TapChip>
    <company.tap.tapuilibrary.uikit.views.TapSelectionTabLayout
        android:id="@+id/sections_tablayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        />
</LinearLayout>